extends _layout

block content
    .row.mb-3
        .col-12.col-md-4
            .text-center
                h4.mt-4 Profile Picture
                if user.picture
                    div: img.mw-100(src=user.picture width=auto height="256px")
                else
                    div: img.img-fluid(src='/logo.png')
                button#upload-profile-picture.mt-1.me-3.btn.btn-secondary Upload
                button#remove-profile-picture.mt-1.btn.btn-secondary Remove
                <input type="file" id="input" class="d-none">
        .col-12.col-md-8
            p: h1 Welcome, #[span#username #{user.username}]!
            p <strong>Name:</strong> #{user.firstName} #{user.lastName}

            p
                strong Grade:
                = ' ' + user.grade
            p
                strong Email:
                = ' ' + user.email
            p
                strong Discord:
                = ' ' + user.discord
            p
                strong Role:
                if user.role
                    = ' ' + user.role
                else
                    = ' N/A'
            p
                strong Team:
                |
                |
                if user.team
                    a(href='/my-team')= user.team
                else
                    = 'N/A'

            a.btn.btn-primary.me-2(href=`/edit-profile`) Edit profile
            a.btn.btn-primary.me-2(href=`/edit-password`) Edit password
            button.btn.btn-primary(type='button' onclick='logout()') Logout

    h2 Bio
    if user.bio
        include _bio.pug
    else
        p No bio set.

    p: a.btn.btn-primary.me-2(href=`/edit-bio`) Edit bio

block scripts
    script(src='/profile.js')
    script(src='/logout.js')
