doctype html
html
    head
        meta(charset='UTF-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title=title
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        block styles
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            .container-fluid
                a.navbar-brand.ms-2(href='/') NSBA2
                button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
                    span.navbar-toggler-icon
                #navbarSupportedContent.collapse.navbar-collapse
                    block navbar
                        ul#nav-main-content.navbar-nav.mb-2.mb-lg-0
                            li.nav-item.dropdown
                                a#tournamentDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Tournament
                                ul.dropdown-menu(aria-labelledby="tournamentDropdown")
                                    li: a.dropdown-item(href='/gms') GMs
                                    li: a.dropdown-item(href='/players') Players
                                    li: a.dropdown-item(href='/teams') Teams
                            li.nav-item.dropdown
                                a#round-robinDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Round Robin
                                ul.dropdown-menu(aria-labelledby="round-robinDropdown")
                                    li: a.dropdown-item(href='/rr/leaderboard') Leaderboard
                                    li: a.dropdown-item(href='/rr/results') Results
                                    li: a.dropdown-item(href='/rr/schedule') Schedule
                                    li: a.dropdown-item(href='/rr/standings') Standings
                                    li: a.dropdown-item(href='/rr/vods') VODs
                                    li: a.dropdown-item(href='/rr/pickem') Pick'em
                            //- li.nav-item.dropdown
                            //-     a#playoffsDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Playoffs
                            //-     ul.dropdown-menu(aria-labelledby="playoffsDropdown")
                            //-         li: a.dropdown-item(href='/playoffs/bracket') Bracket
                            //-         li: a.dropdown-item(href='/playoffs/vods') VODs
                            li.nav-item.dropdown
                                a#draftDropdown.nav-link.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Draft
                                ul.dropdown-menu(aria-labelledby="draftDropdown")
                                    li: a.dropdown-item(href='/draft') Picks
                                    li: a.dropdown-item(href='/combine') Combine
                                    li: a.dropdown-item(href='/mock-draft') Mock Draft
                            li.nav-item: a.nav-link(href='/rules') Rules
                            li.nav-item: a.nav-link(href='/staff') Staff
                            if username
                                li.nav-item: a.nav-link(href='/my-team') My Team
                            else
                                li.nav-item: a.nav-link.disabled(href='/') My Team
                        ul.navbar-nav.ms-auto.me-2.mb-2.mb-lg-0
                            li.nav-item: a.nav-link(href=`/${username ? 'profile' : 'login'}`) #{username ? username : 'Login'}
        .container-xxl.mt-3.pb-5.mb-5
            block content

        block scripts
        script(src="/redirect.js")
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
