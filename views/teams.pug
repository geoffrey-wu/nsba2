extends _layout

block content
    p.lead Teams consist of a GM and between 4-8 players.
    p There are currently #{Object.keys(teams).length} teams registered. Below is a list of all teams:
    .table-responsive: table#table.table.table-hover
        thead
            tr
                th(onclick='sortTable(0)' scope='col') Team Name
                th(onclick='sortTable(1)' scope='col') GM
                th(onclick='sortTable(2, isInt=true)' scope='col') Player 1
                th(onclick='sortTable(3, isInt=true)' scope='col') Player 2
                th(onclick='sortTable(4, isInt=true)' scope='col') Player 3
                th(onclick='sortTable(5, isInt=true)' scope='col') Player 4
                th(onclick='sortTable(6, isInt=true)' scope='col') Player 5
                th(onclick='sortTable(7, isInt=true)' scope='col') Player 6
        tbody
        if teams
            each team in teams
                tr
                    td: a(href=`/teams/${encodeURIComponent(team.name)}`)= team.name
                    td: a(href=`/gms/${encodeURIComponent(team.gm)}`)= team.gm
                    td= team.players[0] || '-'
                    td= team.players[1] || '-'
                    td= team.players[2] || '-'
                    td= team.players[3] || '-'
                    td= team.players[4] || '-'
                    td= team.players[5] || '-'


block scripts
    script(src='/table.js')
