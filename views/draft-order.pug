extends _layout

block content
    p Below is the draft order:
    .table-responsive: table#table.table.table-striped
        thead
            tr
                th(onclick='sortTable(0)' scope='col') Team Name
                th(onclick='sortTable(1)' scope='col') GM
                th(onclick='sortTable(2, isInt=true)' scope='col') Pick 1
                th(onclick='sortTable(3, isInt=true)' scope='col') Pick 2
                th(onclick='sortTable(4, isInt=true)' scope='col') Pick 3
                th(onclick='sortTable(5, isInt=true)' scope='col') Pick 4
                th(onclick='sortTable(6, isInt=true)' scope='col') Pick 5
                th(onclick='sortTable(7, isInt=true)' scope='col') Pick 6
                th(onclick='sortTable(8, isInt=true)' scope='col') Pick 7
        tbody
        if teams
            each team in teams
                tr
                    td: a(href=`/teams/${encodeURIComponent(team.name)}`)= team.name
                    td: a(href=`/gms/${encodeURIComponent(team.gm)}`)= team.gm
                    td= team.draft_picks[0] || '-'
                    td= team.draft_picks[1] || '-'
                    td= team.draft_picks[2] || '-'
                    td= team.draft_picks[3] || '-'
                    td= team.draft_picks[4] || '-'
                    td= team.draft_picks[5] || '-'
                    td= team.draft_picks[6] || '-'


block scripts
    script(src='/table.js')
    script.
        window.onload = () => {
            sortTable(2, isInt=true);
        }
